@model IEnumerable<KucukkoyIHL.Models.Event>

@{
    ViewData["Title"] = "Etkinlikler";
}

<div class="hero-section text-center">
    <div class="container">
        <h1><i class="fas fa-calendar-alt"></i> Etkinlikler</h1>
        <p class="lead">Mezunlarımız için düzenlenen özel etkinlikler</p>
    </div>
</div>

<div class="container">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var evt in Model)
            {
                var isUpcoming = evt.EventDate > DateTime.Now;
                <div class="col-md-6 col-lg-4">
                    <div class="card">
                        @if (!string.IsNullOrEmpty(evt.ImageUrl))
                        {
                            <img src="@evt.ImageUrl" class="card-img-top" alt="@evt.Title"
                                 onerror="this.src='https://via.placeholder.com/400x200?text=Etkinlik+Görseli'">
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/400x200?text=Etkinlik+Görseli" class="card-img-top" alt="@evt.Title">
                        }
                        <div class="card-body">
                            @if (isUpcoming)
                            {
                                <span class="badge bg-warning text-dark mb-2">
                                    <i class="fas fa-clock"></i> Yaklaşan
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary mb-2">
                                    <i class="fas fa-check"></i> Tamamlandı
                                </span>
                            }
                            <h5 class="card-title">@evt.Title</h5>
                            <p class="card-text">
                                <i class="far fa-calendar"></i> <strong>Tarih:</strong> @evt.EventDate.ToString("dd MMMM yyyy, HH:mm")<br>
                                <i class="fas fa-map-marker-alt"></i> <strong>Konum:</strong> @evt.Location
                            </p>
                            <p class="card-text">
                                @(evt.Description.Length > 100 ? evt.Description.Substring(0, 100) + "..." : evt.Description)
                            </p>
                            <a href="/Home/EventDetail/@evt.Id" class="btn btn-primary">
                                <i class="fas fa-info-circle"></i> Detaylar
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i> Henüz etkinlik bulunmamaktadır.
                </div>
            </div>
        }
    </div>
</div>