@{
    ViewData["Title"] = "İletişim";
}

<div class="hero-section text-center">
    <div class="container">
        <h1><i class="fas fa-envelope"></i> İletişim</h1>
        <p class="lead">Bize ulaşın, sizden haber almaktan mutluluk duyarız</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- İletişim Formu -->
        <div class="col-lg-7 mb-4">
            <div class="card">
                <div class="card-body p-4">
                    <h3 class="mb-4"><i class="fas fa-paper-plane"></i> Mesaj Gönderin</h3>
                    <form id="contactForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="fas fa-user"></i> Ad Soyad *
                                </label>
                                <input type="text" class="form-control" id="name" required placeholder="Adınız Soyadınız">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="fas fa-envelope"></i> E-posta *
                                </label>
                                <input type="email" class="form-control" id="email" required placeholder="ornek@email.com">
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="fas fa-phone"></i> Telefon
                                </label>
                                <input type="tel" class="form-control" id="phone" placeholder="(5xx) xxx xx xx">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="fas fa-graduation-cap"></i> Mezuniyet Yılı
                                </label>
                                <input type="number" class="form-control" id="graduationYear" placeholder="Örn: 2015" min="1990" max="2025">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-tag"></i> Konu *
                            </label>
                            <input type="text" class="form-control" id="subject" required placeholder="Mesajınızın konusu">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-comment"></i> Mesajınız *
                            </label>
                            <textarea class="form-control" id="message" rows="6" required placeholder="Mesajınızı buraya yazın..."></textarea>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> 
                            <small>* ile işaretli alanlar zorunludur. En kısa sürede size dönüş yapacağız.</small>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-paper-plane"></i> Mesajı Gönder
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- İletişim Bilgileri -->
        <div class="col-lg-5">
            <!-- Adres ve İletişim -->
            <div class="card mb-4">
                <div class="card-body">
                    <h4 class="mb-4"><i class="fas fa-map-marker-alt"></i> İletişim Bilgileri</h4>
                    
                    <div class="mb-4">
                        <h6 class="text-muted mb-2">
                            <i class="fas fa-school"></i> Adres
                        </h6>
                        <p class="mb-0">
                            <strong>Küçükköy Anadolu İmam Hatip Lisesi</strong><br>
                            Küçükköy Mahallesi, Okul Sokak No:1<br>
                            Aksaray / Aksaray
                        </p>
                    </div>

                    <div class="mb-4">
                        <h6 class="text-muted mb-2">
                            <i class="fas fa-phone"></i> Telefon
                        </h6>
                        <p class="mb-0">
                            <a href="tel:+903822151234" class="text-decoration-none">
                                +90 (382) 215 12 34
                            </a>
                        </p>
                    </div>

                    <div class="mb-4">
                        <h6 class="text-muted mb-2">
                            <i class="fas fa-envelope"></i> E-posta
                        </h6>
                        <p class="mb-0">
                            <a href="mailto:info@kucukkoyaihl.edu.tr" class="text-decoration-none">
                                info@kucukkoyaihl.edu.tr
                            </a>
                        </p>
                    </div>

                    <div>
                        <h6 class="text-muted mb-2">
                            <i class="fas fa-clock"></i> Çalışma Saatleri
                        </h6>
                        <p class="mb-0">
                            Pazartesi - Cuma: 08:00 - 17:00<br>
                            Cumartesi - Pazar: Kapalı
                        </p>
                    </div>
                </div>
            </div>

            <!-- Sosyal Medya -->
            <div class="card">
                <div class="card-body text-center">
                    <h4 class="mb-4"><i class="fas fa-share-alt"></i> Sosyal Medya</h4>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="https://facebook.com" target="_blank" class="btn btn-primary btn-lg" style="width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="fab fa-facebook-f fa-xl"></i>
                        </a>
                        <a href="https://twitter.com" target="_blank" class="btn btn-info btn-lg" style="width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="fab fa-twitter fa-xl"></i>
                        </a>
                        <a href="https://instagram.com" target="_blank" class="btn btn-danger btn-lg" style="width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="fab fa-instagram fa-xl"></i>
                        </a>
                        <a href="https://youtube.com" target="_blank" class="btn btn-danger btn-lg" style="width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; background: #FF0000;">
                            <i class="fab fa-youtube fa-xl"></i>
                        </a>
                    </div>
                    <p class="mt-3 mb-0 text-muted">
                        <small>Bizi sosyal medyada takip edin!</small>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Harita -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body p-0">
                    <h4 class="p-4 mb-0"><i class="fas fa-map"></i> Konumumuz</h4>
                    <div style="width: 100%; height: 450px;">
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3117.123456789!2d34.0!3d38.35!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzjCsDIxJzAwLjAiTiAzNMKwMDAnMDAuMCJF!5e0!3m2!1str!2str!4v1234567890"
                            width="100%" 
                            height="450" 
                            style="border:0; border-radius: 0 0 15px 15px;" 
                            allowfullscreen="" 
                            loading="lazy" 
                            referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Form verilerini al
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;
            const graduationYear = document.getElementById('graduationYear').value;
            const subject = document.getElementById('subject').value;
            const message = document.getElementById('message').value;
            
            // Basit validasyon
            if (!name || !email || !subject || !message) {
                alert('Lütfen zorunlu alanları doldurun!');
                return;
            }
            
            // Başarılı mesaj göster
            alert('Mesajınız başarıyla gönderildi! En kısa sürede size dönüş yapacağız.\n\n' +
                  'NOT: Bu demo bir projedir. Gerçek bir e-posta gönderimi yapmamaktadır. ' +
                  'Canlı ortamda backend entegrasyonu yapılmalıdır.');
            
            // Formu temizle
            this.reset();
            
            // Sayfanın başına scroll yap
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>
}

<style>
    .btn-lg i {
        font-size: 1.5rem;
    }
    
    .card {
        transition: transform 0.3s;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(44, 95, 45, 0.25);
    }
</style>