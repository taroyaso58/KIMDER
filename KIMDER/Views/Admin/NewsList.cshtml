@model IEnumerable<KucukkoyIHL.Models.News>

@{
    ViewData["Title"] = "Haber Yönetimi";
}

<div class="hero-section text-center">
    <div class="container">
        <h1><i class="fas fa-newspaper"></i> Haber Yönetimi</h1>
        <p class="lead">Tüm haberleri görüntüleyin ve yönetin</p>
    </div>
</div>

<div class="container">
    <div class="mb-4">
        <a href="/Admin/CreateNews" class="btn btn-success btn-lg">
            <i class="fas fa-plus"></i> Yeni Haber Ekle
        </a>
        <a href="/Admin" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Geri Dön
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th style="width: 200px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var news in Model)
                            {
                                <tr>
                                    <td><strong>@news.Title</strong></td>
                                    <td>@news.CreatedDate.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        @if (news.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pasif</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Admin/EditNews/@news.Id" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i> Düzenle
                                        </a>
                                        <a href="/Admin/DeleteNews/@news.Id" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Sil
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">
                                    <div class="alert alert-info mb-0">
                                        <i class="fas fa-info-circle"></i> Henüz haber bulunmamaktadır.
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>